<div class="modal fade modalshare" id="modalshares" tabindex="-1" role="dialog" aria-labelledby="modalshareTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalshareTitle">Partager l'article avec le quel de vos ami ?</h5>
                <a class="text-decoration-none text-black-50" href="{{ path('home') }}">
                    <span aria-hidden="true">x</span>
                </a>
            </div>
            <div class="modal-body d-flex flex-column">
                    {% for friend in friends %}
                        <div class="d-flex justify-content-between align-items-center w-75 m-auto">
                            <div>{{ friend.fullname }}</div>
                            <a href="{{ path('post_share', {'user': friend.id, 'post': post.id}) }}" style="margin-left: 25%; margin-top: 10px;" class="w-25 btn btn-primary">Partager</a></div>
                    {% endfor %}
            </div>
        </div>
    </div>
</div>
